{

  "description": "Kill known adblock messages",
  "manifest_version": 2,
  "name": "anti-ad",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
    "default_icon": {
      "16": "icons/campfire-16.png",
      "32": "icons/campfire-32.png"
    }
  }

}